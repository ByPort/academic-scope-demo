// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Academic Scope Demo",

	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},

	"features": {
		"ghcr.io/eitsupi/devcontainer-features/duckdb-cli:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},

	"containerEnv": {
		"HOST_DATA_DIR": "${localEnv:HOME}/academic-scope-demo-data",
		"PYTHONPATH": "${containerWorkspaceFolder}/airflow/dags"
	},

	"mounts": [
		{
			"type": "bind",
			"source": "${localEnv:HOME}/academic-scope-demo-data",
			"target": "${containerWorkspaceFolder}/data"
		},
		{
			"type": "volume",
			"source": "academic-scope-demo_airflow-data",
			"target": "${containerWorkspaceFolder}/airflow"
		}
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip install --user -r requirements-dev.txt"

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"matangover.mypy"
			],
			"settings": {
				"python.testing.pytestArgs": [
					"tests"
				],
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true
			}
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
